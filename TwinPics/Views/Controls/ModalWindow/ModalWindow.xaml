<UserControl
    x:Class="TwinPics.Views.Controls.ModalWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="MainContainer" Visibility="Collapsed">
     
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid  x:Name="GridContainer">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
               
                <Grid Grid.Row="1" Margin="0,50,0,50" Grid.Column="1" Height="500" Background="red">

                </Grid>
            </Grid>
        </ScrollViewer>
        <Grid x:Name="Backstage" Background="#60000000" PointerReleased="BackstagePointerReleased"/>
    </Grid>
</UserControl>
