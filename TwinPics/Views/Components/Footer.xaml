        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    Spacing="5"
                    VerticalAlignment="Center"
                    Grid.Column="2">
            <TextBlock Text="Email"/>
            <TextBlock Text="·"/>
            <TextBlock Text="Donate"/>
            <TextBlock Text="·"/>
            <TextBlock Text="Dribbble"/>
            <TextBlock Text="·"/>
            <TextBlock Text="LinkedIn"/>
            <TextBlock Text="·"/>
